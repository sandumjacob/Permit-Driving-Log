<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jacobsandum.permitdrivinglog.DriveDetailsActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textDriveDetails"
        android:layout_width="189dp"
        android:layout_height="57dp"
        android:text="Drive Details"
        android:gravity="center"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/editText_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Length (Miles)"
        android:inputType="number"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textDriveDetails"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textStartingTime"
        android:layout_width="216dp"
        android:layout_height="27dp"
        android:text="Starting Time:"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_length"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/buttonEditStartingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Starting Time"
        android:onClick="editStartingTimeButtonClicked"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textStartingTime"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textEndingTime"
        android:layout_width="216dp"
        android:layout_height="27dp"
        android:text="Ending Time: "
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonEditStartingTime"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/buttonEditEndingTime"
        android:layout_width="160dp"
        android:layout_height="46dp"
        android:text="Edit Ending Time"
        android:onClick="editEndingTimeButtonClicked"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textEndingTime"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_delete"
        android:onClick="deleteButtonClicked"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="219dp"
        android:layout_height="35dp"
        android:text="Date: "
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonEditEndingTime"
        app:layout_constraintHorizontal_bias="0.504" />

    <Button
        android:id="@+id/buttonEditDate"
        android:layout_width="161dp"
        android:layout_height="43dp"
        android:text="Edit Date"
        android:onClick="editDateButtonClicked"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textDate"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonSave"
        android:layout_width="57dp"
        android:layout_height="54dp"
        app:srcCompat="@android:drawable/ic_menu_save"
        android:onClick="saveButtonClicked"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

</android.support.constraint.ConstraintLayout>
